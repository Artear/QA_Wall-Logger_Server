:ruby
  load 'config.rb'

!!!
%html
  %head{:lang => "es"}
    %meta{:charset => "UTF-8"}
    %title QA WALL
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}

    - if (get_enviroment() == 'dev')
      %link{:href => "css/normalize.css", :rel => "stylesheet", :type => "text/css"}
      %link{:href => "css/qaw-server.css", :rel => "stylesheet", :type => "text/css"}
    - else
      %link{:href => "css/qaw-server-min.css", :rel => "stylesheet", :type => "text/css"}

  %body

    %section#step-1.main
      %header.header-sticky
        .wrapper
          .logo.logo-small QA Wall

      %form#main-form.main-form{:method => "post", :enctype=>"multipart/form-data", :action=>"api/upload"}

        %fieldset.wrapper
          .frm-row
            %label{:for=>"frm-url"} Subir archivo
            %input#fileinput.main-input{:name => "file", :placeholder => "Subir archivo", :type => "file", :required=>"required"}

          .frm-row.actions-bar
            /
              %input.btn{:type => "reset", :value => "Reset"}
              %input.btn.close{:type => "button", :value => "Apagar"}
            %input.btn.primary{:type => "submit", :value => "Arriba"}

    %section#step-2.main

    %script{"data-main" => "js/qaw-server", :src => "js/libs/requirejs-min.js", :type => "text/javascript"}